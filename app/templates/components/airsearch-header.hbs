<!-- Application section to search for airports based on user chosen criteria -->
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Welcome to AirSearch</h1>
        <p class="lead">We hope you find exactly the airport you're looking for.</p>

        <form class="form-inline">
            <div class="btn-group">
                <button type="button" class="btn btn-info btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Name
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Name</a>
                    <a class="dropdown-item" href="#">City</a>
                    <a class="dropdown-item" href="#">IATA</a>
                </div>
            </div>
            <div class="input-group">
                <input type="search" class="form-control" size="50" placeholder="Search By" required>
                <div class="input-group-btn">
                    {{#link-to "airports" class="btn btn-danger btn-lg"}} Go! {{/link-to}}
                </div>
            </div>
        </form>

    </div>
</div>

